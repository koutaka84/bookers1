<h1>Books</h1>
<table>
	
<thead>
	<tr>
	 <th>Title</th>
	 <th>Body</th>
	</tr>
</thead>
	<tbody>
    <% @books.each do |book| %>
	<tr>
	  <td><%= book.title %></td>
	  <td><%= book.body %></td>
	  <td><%= link_to "Show" ,book_path(book.id) %></td>
	  <td><%= link_to "Edit" ,edit_book_path(book.id) %></td>
	  <td><%= link_to "Destroy" ,book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></td>

	</tr>
	<% end %>
	</tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
	<h2 class="book-error">2 errors prohibited this book from being saved:</h2>
	<% @book.errors.full_messages.each do |book| %>
		<p><%= book %></p>
	<% end %>
<% end %>

<%= form_for(@book) do |book| %>
	<h4>Title</h4>
	<%= book.text_field :title %>
	<h4>Body</h4>
	<%= book.text_area :body %><br>
	<%= book.submit 'Create Book' %>
<% end %>